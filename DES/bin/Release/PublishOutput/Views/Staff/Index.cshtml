<div class="navbar">
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#view_staff_group">Staff Group</a></li>
        <li><a data-toggle="tab" href="#view_staff">Staff</a></li>
    </ul>
    <div class="tab-content" style="margin-top:20px">
        <div id="view_staff_group" class="tab-pane fade in active">@Html.Partial("StaffGroup")</div>
        <div id="view_staff" class="tab-pane fade">@Html.Partial("Staff")</div>
    </div>
