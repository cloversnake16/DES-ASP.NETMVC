<div id="create-staff-modal" class="modal fade" role="dialog">
    <div class="modal-dialog" style="width:360px">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#428bca;">
                <p style="margin:0; text-align: center; font-size: medium;color:#ffffff"><b>Create Staff</b></p>
            </div>
            <div class="modal-body">
                <table class="table table-condensed" style="margin:0">
                    <tr>
                        <td style="border:none">FirstName</td>
                        <td style="border:none"><input type="text" style="width:180px" /></td>
                    </tr>
                    <tr>
                        <td style="border:none">LastName</td>
                        <td style="border:none"><input type="text" style="width:180px" /></td>
                    </tr>
                    <tr>
                        <td style="border:none">Payroll No.</td>
                        <td style="border:none"><input type="text" style="width:180px" /></td>
                    </tr>
                    <tr>
                        <td style="border:none">DateExpire</td>
                        <td style="border:none"><input type="date" style="width:180px" /></td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer" style="margin:0">
                <p id="create-staff-info" style="color:#0000ff"></p>
                <p id="create-staff-error" style="color: #ff0000"></p>
                <button type="button" class="btn btn-primary" style=" width:100px" onclick="create_staff()">Create</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" style=" width:100px">Cancel</button>
            </div>
        </div>
    </div>
</div>

