@using DESCore.Models

@if (Session["UserModel"] != null)
{
    UserModel user = (UserModel)Session["UserModel"];
        
    <ul class="nav navbar-nav">
        <li>
            <ul class="nav navbar-nav navbar-right">
                @if(user.IsAdmin)
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Management<b class="caret" style="margin-left:5px;"></b>
                        </a>
                        <ul class="dropdown-menu navbar-inverse">
                            <li>@Html.ActionLink("User Management", "Index", "User")</li>
                            <li>@Html.ActionLink("Staff Management", "Index", "Staff")</li>
                            <li>@Html.ActionLink("Settings", "Index", "Set")</li>
                        </ul>
                    </li>
                }
                <li>@Html.ActionLink("Dashboard", "Index", "Dashboard")</li>
