@model DESCore.Models.ForgotModel

<div style="margin: 40px auto; width: 300px;">
    <table class="table table-bordered" style="margin-top:20px;">
        <tr>
            <th style="background-color:#0094ff;text-align:center;color:#ffffff;font-size:large">Reset Password</th>
        </tr>
        <tr>
            <td>
                <div style="margin: 15px auto 0 auto; width: 260px;">
                    @using (Html.BeginForm("ResetPassword", "Account", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        
                        <table id="table_login" class="table" style="margin:0;padding:0">
                            @if( Model != null && Model.Email != null)
                            {
                                <tr>
                                    <td style="border:none"><b>Code for reset was sent to @(Model.Email).</b></td>
                                </tr>
                            }                                    
                            <tr>
                                <td align="center" style="border:none">Code: <input type="text" name="Code"/></td>
                            </tr>
                            <tr>
                                <td align="center" style="padding-top: 15px; border: none"><input type="submit" value="Send code" class="btn btn-success" style="width: 140px;" /></td>
                            </tr>
                            @if( Model != null && Model.ErrorMessage != null)
                            {
                                <tr>
                                    <td align="right" style="padding-top: 15px; border: none; color: #ff0000">@Model.ErrorMessage</td>
                                </tr>
                            }
                        </table>
                    }
                </div>
            </td>
        </tr>
    </table>
</div>