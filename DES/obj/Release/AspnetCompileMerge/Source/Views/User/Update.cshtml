@model DES.Models.UserViewModel

@using (Html.BeginForm("Update", "User", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <table class="table">
        <tr>
            <td align="center" style="border:none">
                <table width="360" style="border: 1px solid #dddddd">
                    <tr>
                        <th style="background-color:#0094ff;text-align:center;color:#ffffff;font-size:large">Update User</th>
                    </tr>
                    <tr>
                        <td style="padding:20px">
                            <table class="table" style="margin:0;padding:0">
                                <tr>
                                    <td align="right" style="border:none; vertical-align:middle; ">User name:</td>
                                    <td align="left" style="border: none">
                                        @Model.UserName
                                    </td>
                                </tr>
                                <tr>
                                    <td align="right" style="border: none; vertical-align: middle; ">User type:</td>
                                    <td align="left" style="border: none; ">
                                        <select name="UserTypeId" style="padding: 3px;" class="form-control">
                                            @foreach (var userType in Model.UserTypes)
                                            {
                                                if (userType.Id == Model.UserTypeId)
                                                {
                                                    <option value="@userType.Id" selected>@userType.TypeName</option>
                                                }
                                                else
                                                {
                                                    <option value="@userType.Id">@userType.TypeName</option>
                                                }
                                            }
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td align="right" style="border: none; vertical-align: middle; ">Email:</td>
                                    <td align="left" style="border: none; ">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td align="right" style="border: none; padding: 0 30px">
                            <input type="submit" value="Update" class="btn btn-success" style="width: 120px;" />
                            @Html.ActionLink("Cancel", "Index", "User", null, new { @class = "btn btn-default", @style = "width: 120px;" })
                        </td>
                    </tr>
                    <tr>
                        <td align="center" style="border: none; padding: 10px 20px">
                            @if (Model != null)
                            {
                                <p style="color:#ff0000; margin-bottom:0">@Model.Error</p>
                            }
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
}
